# Environment variables for LSDAMM Coordination Server
# Copy to .env and fill in your values

NODE_ENV=production

# Server Configuration
PORT=3001
HOST=0.0.0.0

# Database
DATABASE_PATH=./data/mesh.db

# Security
MESH_MASTER_KEY=your-secure-master-key-here
JWT_SECRET=your-jwt-secret-here

# AI Provider API Keys
OPENAI_API_KEY=
OPENAI_ORG_ID=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
XAI_API_KEY=
OLLAMA_API_KEY=

# Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Search Engine
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_API_KEY=

# Logging
LOG_LEVEL=info
LOG_PATH=./logs

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Session Management
SESSION_TIMEOUT=3600000
