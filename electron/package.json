{
  "name": "@lackadaisical/lsdamm-desktop",
  "version": "1.0.0",
  "description": "LSDAMM Desktop Client - Lackadaisical Spectral AI Mesh",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run watch:main\" \"npm run watch:renderer\"",
    "watch:main": "tsc -w",
    "watch:renderer": "vite build --watch",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:renderer": "vite build",
    "package": "electron-builder build --publish=never",
    "package:win": "electron-builder build --win --publish=never",
    "package:mac": "electron-builder build --mac --publish=never",
    "package:linux": "electron-builder build --linux --publish=never"
  },
  "build": {
    "appId": "com.lackadaisical-security.lsdamm",
    "productName": "LSDAMM Desktop",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "build/icons",
      "category": "Development"
    }
  },
  "keywords": [
    "ai",
    "mcp",
    "mesh",
    "coordination",
    "electron",
    "desktop"
  ],
  "author": "Lackadaisical Security <support@lackadaisical-security.com>",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^10.0.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@vitejs/plugin-vue": "^5.2.1",
    "concurrently": "^9.1.2",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "sass": "^1.83.4",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vue": "^3.5.13"
  }
}
